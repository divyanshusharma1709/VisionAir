<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Predict_Train">

    <TextView
        android:id="@+id/featureText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="Features:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/featureBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/featureText"
        android:layout_marginLeft="24dp"
        android:text="Features_List"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/AQI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/predBox"
        android:layout_centerHorizontal="true"
        android:text="Predicted AQI:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/predBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="24dp"
        android:text="Predicted AQI"
        android:textSize="24sp" />


</RelativeLayout>