<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment2">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/geosans"
                android:textColor="#000000"
                android:letterSpacing="0.1"
                android:textSize="38dp"
                android:text="Personalization Opt-In"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"/>
            <ImageView
                android:layout_width="260dp"
                android:layout_height="240dp"
                android:src="@drawable/safe_web"
                ></ImageView>
            <TextView
                android:id="@+id/textView1"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:letterSpacing="0.1"
                android:fontFamily="@font/geosans"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:text="What information will I be giving if I choose this option ? "
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:letterSpacing="0.1"
                android:fontFamily="@font/geosans"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:text="NO information whatsoever! One can see it this way, when VisionAir's algorithm looks at your data, it identifies a few patterns
that can be useful in helping us improve VisionAir. What you share with us, are these recogonised patterns
and NOT any of your data."
                android:textAlignment="center"/>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>