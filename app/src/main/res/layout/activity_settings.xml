<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:orientation="vertical">
    <TextView
        android:id="@+id/ptTitle"
        android:text="Settings"
        android:gravity="center"
        android:textSize="36sp"
        android:layout_marginTop="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="36dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/poptbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personalization Model Opt In"/>

        <CheckBox
            android:id="@+id/pmbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:id="@+id/debugtv"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/poptbox"
            android:layout_centerVertical="true"
            android:text="Debugger Mode"/>

        <CheckBox
            android:id="@+id/devCB"
            android:layout_below="@id/pmbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"/>
        <EditText
            android:id="@+id/passET"
            android:hint="Enter Password"
            android:layout_marginTop="16dp"
            android:layout_below="@id/debugtv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="Enter Password" />
        <Button
            android:id="@+id/passBTN"
            android:layout_below="@id/passET"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"/>
    </RelativeLayout>
</LinearLayout>