<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment2">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/geosans"
                android:textColor="#000000"
                android:letterSpacing="0.1"
                android:textSize="38dp"
                android:text="Personalization Opt-In"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"/>
            <ImageView
                android:layout_width="260dp"
                android:layout_height="240dp"
                android:src="@drawable/average_safe"/>
            <TextView
                android:id="@+id/In"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/geosans"
                android:textColor="#000000"
                android:letterSpacing="0.1"
                android:textSize="38dp"
                android:text="Are You In?"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"/>
            <Button
                android:id="@+id/yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:letterSpacing="0.1"
                android:fontFamily="@font/geosans"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:background="@drawable/button_round_stroke"
                android:text="Yes, count me in"
                android:textAlignment="center"/>
            <Button
                android:id="@+id/no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:letterSpacing="0.1"
                android:fontFamily="@font/geosans"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:background="@drawable/button_round_stroke"
                android:text="Maybe Some Other Time"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/textView2"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:letterSpacing="0.1"
                android:fontFamily="@font/geosans"
                android:textColor="#000000"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:text="*This setting can be changed later"
                android:textAlignment="center"/>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>